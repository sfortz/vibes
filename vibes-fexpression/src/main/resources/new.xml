<?xml version="1.0" encoding="UTF-8"?>
<fm namespace="CleaningRobot">
    <feature name="Robot">
        <optional>
            <feature name="Mapping"></feature>
        </optional>
        <mandatory>
            <feature name="ObstacleDetection">
                <alternative>
                    <feature name="Lidar"></feature>
                    <feature name="Camera"></feature>
                </alternative>
                <feature_constraints>
                    <exclusions>
                        <exclude conflict1="Lidar" conflict2="Camera"></exclude>
                    </exclusions>
                </feature_constraints>
            </feature>
        </mandatory>
        <mandatory>
            <feature name="Cleaning"></feature>
        </mandatory>
        <feature_constraints>
            <exclusions>
                <exclude conflict1="Cleaning" conflict2="Lidar"></exclude>
            </exclusions>
            <requirements>
                <requires feature="Cleaning" dependency="Mapping"></requires>
            </requirements>
        </feature_constraints>
    </feature>
</fm>